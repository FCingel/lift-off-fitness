<div class="row">
<div class="col-xs-6 col-centered form">

<h1>Sign in</h1>

{{#if errors}}
  <h3>Errors occured</h3>
  {{#each errors}}
    <p>Path: {{path}}</p>
    <p>Message: {{message}}</p>
    <hr />
  {{/each}}
{{/if}}

  <form name="create-get" action="/sign-in" method="get">
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" name="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="text" class="form-control" name="password" placeholder="Password">
  </div>
  
  <div class="submit"><button type="submit" class="btn btn-info">Sign In</button></div>
  </form>
</div>
</div>